@{
    Layout = "_Wound";
}

@model List<User>

@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#jsUserTable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 5
            });
        });
    </script>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<h2>Users</h2>

<table id="jsUserTable" class="table table-condensed table-hover">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">User role</th>
        <th scope="col">Action</th>
    </tr>
    <tbody>
        @foreach (User account in Model)
        {
            
            <tr>
                <td>@account.username</td>
                <td>@account.email</td>
                <td>@account.user_role</td>
                <td>
                    <a asp-controller="Register"
                       asp-action="Delete"
                       asp-route-id="@account.username"
                       onclick="return confirm('Delete User [@account.username]')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
