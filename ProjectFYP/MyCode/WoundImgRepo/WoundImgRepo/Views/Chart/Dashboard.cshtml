@section MoreScripts {
    <script src="~/lib/chartjs/Chart.min.js"></script>
    <script src="~/lib/chartjs/chartjs-plugin-labels.min.js"></script>

    <script language="javascript">


      $(document).ready(function () {
         new Chart(document.getElementById("chart"), {
            type: '@ViewData["Chart"]',
            data: {
               labels: @Json.Serialize(ViewData["Labels"]),
               datasets: [{
                  label: '@ViewData["Legend"]',
                  data: @Json.Serialize(ViewData["Data"]),
                  backgroundColor: @Json.Serialize(ViewData["Colors"]),
                  fill: false
               }]
            },
             options: {
               responsive: false,
               scaleBeginAtZero: true,
                legend: {
                    display: @ViewData["ShowLegend"]
               },
                    scales: {
                  yAxes: [{
                     display: @(ViewData["Chart"].ToString().Equals("pie")?"false":"true"),
                     gridLines: {
                        display: false,
                     },
                     ticks: {
                        beginAtZero: true,
                        stepSize: 1
                     }
                  }]
               },
               title: {
                  display: true,
                  text: '@ViewData["Title"]'
               }
            }
         });
      });

        $(document).ready(function () {
         new Chart(document.getElementById("Catchart"), {
            type: '@ViewData["CatChart"]',
            data: {
               labels: @Json.Serialize(ViewData["CatLabels"]),
               datasets: [{
                  label: '@ViewData["CatLegend"]',
                  data: @Json.Serialize(ViewData["CatData"]),
                  backgroundColor: @Json.Serialize(ViewData["CatColors"]),
                  fill: false
               }]
            },
             options: {
               responsive: false,
               scaleBeginAtZero: true,
                legend: {
                    display: @ViewData["CatShowLegend"]
               },

               title: {
                  display: true,
                  text: '@ViewData["CatTitle"]'
               }
            }
         });
      });
        $(document).ready(function () {
         new Chart(document.getElementById("UserChart"), {
            type: '@ViewData["UserChart"]',
            data: {
               labels: @Json.Serialize(ViewData["UserLabels"]),
               datasets: [{
                  label: '@ViewData["UserLegend"]',
                  data: @Json.Serialize(ViewData["UserData"]),
                  backgroundColor: @Json.Serialize(ViewData["UserColors"]),
                  fill: false
               }]
            },
             options: {
               responsive: false,
               scaleBeginAtZero: true,
                legend: {
                    display: @ViewData["UserShowLegend"]
               },
                scales: {
                  yAxes: [{
                     display: @(ViewData["UserChart"].ToString().Equals("pie")?"false":"true"),
                     gridLines: {
                        display: false,
                     },
                     ticks: {
                        beginAtZero: true,
                        stepSize: 1
                     }
                  }]
               },

               title: {
                  display: true,
                  text: '@ViewData["UserTitle"]'
               }
            }
         });
        });
        $(document).ready(function () {
         new Chart(document.getElementById("VersionChart"), {
            type: '@ViewData["VersionChart"]',
            data: {
               labels: @Json.Serialize(ViewData["VersionLabels"]),
               datasets: [{
                  label: '@ViewData["VersionLegend"]',
                  data: @Json.Serialize(ViewData["VersionData"]),
                  backgroundColor: @Json.Serialize(ViewData["VersionColors"]),
                  fill: false
               }]
            },
             options: {
               responsive: false,
               scaleBeginAtZero: true,
                legend: {
                    display: @ViewData["VersionShowLegend"]
               },
                scales: {
                  yAxes: [{
                     display: @(ViewData["VersionChart"].ToString().Equals("pie")?"false":"true"),
                     gridLines: {
                        display: false,
                     },
                     ticks: {
                        beginAtZero: true,
                        stepSize: 1
                     }
                  }]
               },
               title: {
                  display: true,
                  text: '@ViewData["VersionTitle"]'
               }
            }
         });
        });

         $(document).ready(function () {
         new Chart(document.getElementById("tissuechart"), {
            type: '@ViewData["TissueChart"]',
            data: {
               labels: @Json.Serialize(ViewData["TissueLabels"]),
               datasets: [{
                  label: '@ViewData["TissueLegend"]',
                  data: @Json.Serialize(ViewData["TissueData"]),
                  backgroundColor: @Json.Serialize(ViewData["TissueColors"]),
                  fill: false
               }]
            },
             options: {
               responsive: false,
               scaleBeginAtZero: true,
                legend: {
                    display: @ViewData["TissueLegend"]
               },
                scales: {
                  yAxes: [{
                     display: @(ViewData["TissueChart"].ToString().Equals("pie")?"false":"true"),
                     gridLines: {
                        display: false,
                     },
                     ticks: {
                        beginAtZero: true,
                        stepSize: 1
                     }
                  }]
               },
               title: {
                  display: true,
                  text: '@ViewData["TissueTitle"]'
               }
            }
         });
      });
    </script>

    
}

<head>
    <!-- style sheets references -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</head>
<body>
    
    <div class="container-fluid">
        <div class="row">
            <h2 class="mb-4">Welcome to the dashboard</h2>
        </div>
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Highest Location Record
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewData["Maximum"]
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Most frequent user
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewData["MaximumUsers"]
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                   Total Records
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewData["TotalRecords"]
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class=" row">
            <ul class="nav nav-tabs">
                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#Location">Wounds by location</a></li>
                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#Category">Wounds by category</a></li>
                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#Users">Display Users</a></li>
                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#Versions">Versions</a></li>
                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#Tissues">Wound by Tissues</a></li>
            </ul>
        </div>
        
        <div class="tab-content" style="margin-top:10px">
            <div id="Location" class="tab-pane fade in active">
                <h2>Wound by @ViewData["Title"]</h2>
                <canvas id="chart" width="600" height="300"></canvas>
            </div>
            <div id="Category" class="tab-pane fade">
                <h2>Wound by @ViewData["CatTitle"]</h2>
                <canvas id="Catchart" width="600" height="300"></canvas>
            </div>
            <div id="Users" class="tab-pane fade">
                <h2>Display @ViewData["UserTitle"]</h2>
                <canvas id="UserChart" width="600" height="300"></canvas>
            </div>
            <div id="Versions" class="tab-pane fade">
                <h2>Display @ViewData["VersionTitle"]</h2>
                <canvas id="VersionChart" width="600" height="300"></canvas>
            </div>
            <div id="Tissues" class="tab-pane fade">
                <h2>Wound by @ViewData["TissueTitle"]</h2>
                <canvas id="tissuechart" width="600" height="300"></canvas>
            </div>
        </div>

        
        

    </div>
</body>
