
@{
    Layout = "_Wound";
}

@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsWoundsTable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 2
            });
        });
    </script>
}
@model List<Trip>


@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}
<style>
    img {
        width: 200px;
        height: 200px;
        object-fit: cover;
    }
</style>

<h2>Wounds</h2>
<div>
    <table id="jsWoundsTable" class="table table-bordered table-condensed table-hover table-striped" >
      <thead>
        <tr>
            <th scope="col" width="20%">Id</th>
            <th scope="col" width="20%">Name</th>
            <th scope="col" width="20%">Original Image</th>
            <th scope="col" width="20%">Latest Annotation</th>
            <th scope="col" width="20%">Original Mask</th>
            <th scope="col" width="20%">Details</th>
            <th scope="col" width="20%">Edit / Delete</th>
        </tr>
      </thead>
      <tbody>
        @foreach (Trip t in Model)
        {
            <tr scope="row">
                <td width="20%">@t.Id</td>
                <td width="20%">@t.Title</td>
                <td width="20%"><img src="/photos/@t.Picture"></td>
                <td width="20%"><img src="/photos/@t.Picture"></td>
                <td width="20%"><img src="/photos/@t.Picture"></td>
                <td width="20%"><a asp-controller="Wound" asp-action="Details">Details</a></td>
                <td width="20%"><a asp-controller="Wound" asp-action="Edit">Edit</a> |  <a asp-controller="Wound" asp-action="Delete">Delete</a></td>
            </tr>
        }
      </tbody>
    </table>
</div>


