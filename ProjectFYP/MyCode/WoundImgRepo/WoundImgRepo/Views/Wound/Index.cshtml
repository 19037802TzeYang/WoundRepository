
@{
    Layout = "_Wound";
}

@model List<Wound>
@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsWoundsTable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 5
            });
        });
    </script>
}

<style>
        img {
            width: 200px;
            height: 200px;
            object-fit: cover;
        }
    </style>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Msg"]
    </div>
}
<h2>Wounds</h2>
<table id="jsWoundsTable" class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th scope="col" width="20%">Wound Id</th>
            <th scope="col" width="20%">Name</th>
            <th scope="col" width="20%">Wound Stage</th>
            <th scope="col" width="20%">Remarks</th>
            <th scope="col" width="20%">Wound Category Id</th>
            <th scope="col" width="20%">Wound Location Id</th>
            
            <th scope="col" width="20%">Annotation Image</th>
            
            <th scope="col" width="20%">Tissue Id</th>
            <th scope="col" width="20%">Version Id</th>
            <th scope="col" width="20%">Image Id</th>
            <th scope="col" width="20%">User Id</th>
            <th scope="col" width="20%">Details</th>
            <th scope="col" width="20%">Edit / Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Wound w in Model)
        {
            <tr>
                <td width="20%">@w.wound_id</td>
                <td width="20%">@w.name</td>
                <td width="20%">@w.wound_stage</td>
                <td width="20%">@w.remarks</td>
                <td width="20%">@w.wound_category_id</td>
                <td width="20%">@w.wound_location_id</td>
                
                <td width="20%"><img></td>
                
                <td width="20%">@w.tissue_id</td>
                <td width="20%">@w.version_id</td>
                <td width="20%">@w.image_id</td>
                <td width="20%">@w.user_id</td>
                <td width="20%"><a asp-controller="Wound" asp-action="Details" asp-route-id="@w.wound_id">Details</a></td>
                <td width="20%"><a asp-controller="Wound" asp-action="Edit">Edit</a> |  <a asp-controller="Wound" asp-action="Delete">Delete</a></td>
            </tr>
        }
    </tbody>
</table>



