@model List<WoundRecord>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<h2> View Wound </h2>

<div class="row">
    @foreach (WoundRecord row in Model)
    {
        <div class="col-sm-4">
            <div class="card">
                <a asp-controller="Wound" asp-action="Details2" asp-route-id="@row.woundid">
                    <img src="/photos/@row.imagefile" class="card-img-top" alt="Responsive image" width="200" height="230" />
                </a>
                <div class="card-body">
                    <div class="card-title">
                        @row.woundname
                    </div>
                    <div>
                        <small>
                            @row.woundlocationname

                        </small>
                        <a asp-controller="Wound" asp-action="Details" asp-route-id="@row.woundid">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


