@model List<WVersion>
@{ Layout = "_Wound"; }
@if (TempData["Msg"] != null)
{
<div class="alert alert-@TempData["MsgType"]">
    @TempData["Msg"]
</div>}

@section MoreScripts {
    <script>

        function addVersion() {
            var name = $('#versionName').val();
            window.location = 'Admin/AddVersion?name=' + name;
        }
    </script>
}

<h2>Versions</h2>

<div class="mb-4 mt-4">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addVersionModal">
        Add Version
    </button>
</div>
<div class="modal fade" id="addVersionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">Add new version</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-sm-4">Version Name:</label>
                    <div class="col-sm-6">
                        <input type="text" id="versionName">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-4 col-sm-6">
                        <button type="button" class="btn btn-primary" onclick="addVersion()">
                            Add
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th scope="col" width="20%">Version Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WVersion v in Model)
        {
<tr scope="row">
    <td width="20%">@v.name</td>
</tr>}
    </tbody>
</table>